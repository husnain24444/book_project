<h1>Books</h1>

<%= search_form_for @q do |f| %>
  <div>
    <%= f.label :title_cont, "Search by Book Name" %>
    <%= f.search_field :title_cont %>
    <%= f.submit "Search" %>
  </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= book.description %></td>
        <td>
          <%= link_to 'Show', book %> |
          <%= link_to 'Edit', edit_book_path(book) %> |
          <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Book', new_book_path %>
